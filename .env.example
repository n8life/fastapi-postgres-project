# Database Configuration
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/testdb

# Security Configuration
# IMPORTANT: Replace with a strong, unique API key in production
API_KEY=your-secure-api-key-here

# HTTPS Enforcement (set to "false" for local development)
ENFORCE_HTTPS=false

# API Key Requirement (set to "false" to disable API key validation for development)
REQUIRE_API_KEY=true

# Database Connection Pool Settings (optional)
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
SQLALCHEMY_ECHO=false

# Agent Configuration
# Name of the agent that will be used as sender for task assignments
AGENT_NAME=task_assigner
